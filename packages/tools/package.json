{
  "name": "@cornerstonejs/tools",
  "version": "0.1.0",
  "description": "Cornerstone3D Tools",
  "main": "dist/umd/index.js",
  "types": "dist/esm/index.d.ts",
  "module": "dist/esm/index.ts",
  "files": [
    "dist/"
  ],
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build:cjs": "tsc --project ./tsconfig.cjs.json",
    "build:esm": "tsc --project ./tsconfig.esm.json",
    "build:umd": "cross-env NODE_ENV=production webpack --config .webpack/webpack.prod.js",
    "build:all": "yarn run build:umd && yarn run build:cjs && yarn run build:esm",
    "build": "yarn run build:all && api-extractor run",
    "build:update-api": "yarn run build:all && api-extractor run --local",
    "prepublishOnly": "yarn run build",
    "example": "node ../../utils/ExampleRunner/example-runner-cli.js"
  },
  "peerDependencies": {
    "gl-matrix": "^3.3.0",
    "vtk.js": "git+https://github.com/jadh4v/vtk-js.git#image-volume-half-voxel",
    "@cornerstonejs/core": "^0.1.0"
  },
  "devDependencies": {
    "vtk.js": "git+https://github.com/jadh4v/vtk-js.git#image-volume-half-voxel",
    "@cornerstonejs/streaming-image-volume-loader": "^0.1.0",
    "@cornerstonejs/core": "^0.1.0"
  },
  "contributors": [{
    "name": "Cornerstone.js Contributors",
    "url": "https://github.com/orgs/cornerstonejs/people"
  }],
  "license": "MIT",
  "funding": {
    "type" : "individual",
    "url" : "https://ohif.org/donate"
  }
}
